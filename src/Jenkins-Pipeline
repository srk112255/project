pipeline {
	agent any 
	environment {
		MY_HOME_ANS = "Welcome Master to my home!"
	}
	stages {
		stage ("One") {
			steps { 
			echo "Step 1 Executed"
			}
		}
		stage ("Two") {
			steps { 
			echo "Step 2 Executed"
			echo "$MY_HOME_ANS"
			}
		}
		stage ("Three") {
			parallel {
				stage ("Pre")  {
					steps { 
				echo "Pre Step  Executed"
				sh "sleep 30"
				 }
				}
					stage ("Post") {
						steps { 
					echo "Post Step Executed"
					sh "service --status-all"
					}
				}
			}
		}
	}	
}
